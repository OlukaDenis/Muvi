<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="android:colorControlNormal">@color/hint</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WithNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="InfoTitles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SmallTitles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="android:indicatorEnd">5dp</item>
        <item name="android:indicatorStart">5dp</item>
        <item name="tabMode">scrollable</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="tabGravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyTabTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MovieTabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabBackground">@color/background</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/MyMovieTextAppearance</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="android:indicatorEnd">5dp</item>
        <item name="android:indicatorStart">5dp</item>
        <item name="tabMode">fixed</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="tabGravity">fill</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MyMovieTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
